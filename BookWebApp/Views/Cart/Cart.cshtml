@model List<BookShared.Models.Cart>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<div>

    @foreach (var cart in Model)
    {
        <div class="container">
            <br><hr><br>
            <div class="row">
                <div class="col-md-2">
                    <img src="@cart.Book.Img" width="55" height="88">
                </div>
                <div class="col-md-2">
                    @*<p>Author</p>*@
                    <p>Title</p>
                    <p>Price</p>
                    <p>Quantity</p>
                    <p>REMOVE FROM CART</p>

                </div>
                <div class="col-md-8">
                    @*<p>@cart.Book.Author.Name</p>*@
                    <p>@cart.Book.Title</p>
                    <p>@cart.Book.Price</p>
                    <p>@cart.Quantity</p>
                    <p>@Html.ActionLink("RFC", "Delete", "Cart", new { id = cart.Id }, new { @style = "color:blue;" })</p>
                </div>
            </div>
        </div>
    }

</div>