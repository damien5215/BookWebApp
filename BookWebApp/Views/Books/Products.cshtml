@model List<BookShared.Models.Book>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<div>

    @foreach (var book in Model)
    {
        <div class="container">
            <br><hr><br>
            <div class="row">
                <div class="col-md-2">
                    <img src="@book.Img" width="100" height="160">
                </div>
                <div class="col-md-2">
                    <p>Author</p>
                    <p>Title</p>
                    <p>Genre</p>
                    <p>Price</p>
                    <p>Description</p>

                </div>
                <div class="col-md-8">
                    <p>@book.Author.Name</p>
                    <p>@book.Title</p>

                    <p>
                        @foreach (var genre in book.Genres)
                        {
                            @genre.Genre.GenreOfBook
                            <text> </text>
                        }
                    </p>

                    <p>@book.Price</p>
                    <p>@book.Description</p>

                </div>
            </div>
        </div>
    }

</div>