@model BookWebApp.ViewModels.TestViewModel


@{
    ViewBag.Title = "Test";
}

<h2>Test</h2>

@using (Html.BeginForm())
{
    @*<h3>Main Information</h3>*@

    @Html.DropDownListFor(m => m.GenreId,
                    Model.GenreSelectListItems, "",
                    new { @class = "form-control" })

    <div class="dropdown d-inline-block">
        <button type="submit" class="btn btn-primary btn-sm">FILTER</button>
        <input type="button" class="btn btn-primary btn-sm" value="RESET" onclick="location.href='@Url.Action("Test", "Books")'" />
    </div>

}

<div>

    @foreach (var book in Model.BookGenreList)
    {
        <div class="container">
            <br><hr><br>
            <div class="row">
                <div class="col-md-2">
                    <img src="@book.Book.Img" width="100" height="160">
                </div>
                <div class="col-md-10">
                    <p>@book.Book.Author.Name</p>
                    <p>@book.Book.Title</p>
                    <p>@book.Book.Description</p>

                    <p>@book.Genre.GenreOfBook</p>
                </div>
            </div>
        </div>
    }
